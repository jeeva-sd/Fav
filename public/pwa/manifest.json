{
    "manifest_version": 3,
    "name": "Fav Insta",
    "description": "We covers everything from Instagram tips and tricks to hashtag generators. So get the most out of Instagram with our blog posts.",
    "version": "1.0",
    "display": "fullscreen",
    "orientation": "portrait",
    "splash_pages": null,
    "background_color": "#4f46e5",
    "icons": {
      "16": "favIcons/favicon-16x16.png",
      "32": "favIcons/favicon-32x32.png",
      "48": "pwa/maskable_icon_x48.png",
      "128": "pwa/maskable_icon_x128.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_icon": {
      "16": "favIcons/favicon-16x16.png",
      "32": "favIcons/favicon-32x32.png",
      "48": "pwa/maskable_icon_x48.png",
      "128": "pwa/maskable_icon_x128.png"
      }
    },
    "permissions": ["scripting", "activeTab"]
  }